{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Dashboard schema 1.1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "description": "Name of the Dashboard.",
      "$ref": "#/$def/Name"
    },
    "category": {
      "description": "Category of the Dashboard, used to group dashboards on the Dashboards-overview page.",
      "$ref": "#/$def/Enums/DashboardCategory"
    },
    "filters": {
      "description": "A list of filters which enable the end users to customize the data displayed on the Dashboard.",
      "type": "array",
      "items": {
        "$ref": "#/$def/Filter"
      }
    },
    "widgets": {
      "description": "A list of widgets displayed in the dashboard.",
      "type": "array",
      "items": {
        "$ref": "#/$def/Widget"
      }
    },
    "tv_compatible": {
      "description": "Configures whether the dashboard is TV compatible or not.",
      "type": "boolean"
    }
  },
  "required": ["name", "category", "filters", "widgets"],
  "$def": {
    "Name": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "en": { "description": "English translation", "type": "string" },
            "de": { "description": "German translation", "type": "string" },
            "it": { "description": "Italian translation", "type": "string" },
            "es": { "description": "Spanish translation", "type": "string" },
            "fr": { "description": "French translation", "type": "string" }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      ]
    },
    "Filter": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/$def/Filter/FilterItem/Time" },
        { "$ref": "#/$def/Filter/FilterItem/Article" },
        { "$ref": "#/$def/Filter/FilterItem/Line" },
        { "$ref": "#/$def/Filter/FilterItem/Order" }
      ],
      "FilterItem": {
        "Time": {
          "required": ["type", "default"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "description": "The time filter enables end users to display dashboard data according to specific time periods.",
              "const": "TIME"
            },
            "default": {
              "description": "The default value for the time filter.",
              "$ref": "#/$def/Enums/DefaultDashboardTimeFilter"
            }
          }
        },
        "Article": {
          "required": ["type", "optional"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "description": "The Article filter enables end users to display dashboard data based on specific articles.",
              "const": "ARTICLE"
            },
            "single_selection": {
              "description": "If set, only one article can be selected; otherwise, multiple articles can be selected.",
              "type": "boolean"
            },
            "optional": {
              "description": "Configures whether the article filter is optional (true) or required (false).",
              "type": "boolean"
            }
          }
        },
        "Line": {
          "required": ["type", "line_types", "optional"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "description": "The Line filter enables the end user to filter the data shown on the dashboard based on lines.",
              "const": "LINE"
            },
            "line_types": {
              "description": "A list of line types available in the line filter dialogue.",
              "type": "array",
              "items": {
                "$ref": "#/$def/Enums/LineType"
              }
            },
            "single_selection": {
              "description": "If set, only one line can be selected; otherwise, multiple lines can be selected.",
              "type": "boolean"
            },
            "optional": {
              "description": "Configures whether the line filter is optional (true) or required (false).",
              "type": "boolean"
            }
          }
        },
        "Order": {
          "required": ["type", "optional"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "description": "The Order filter enables the end user to filter the data shown on the dashboard based on orders.",
              "const": "ORDER"
            },
            "single_selection": {
              "description": "If set, only one order can be selected; otherwise, multiple orders can be selected.",
              "type": "boolean"
            },
            "optional": {
              "description": "Configures whether the order filter is optional (true) or required (false).",
              "type": "boolean"
            }
          }
        }
      }
    },
    "Widget": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/$def/Widget/WidgetItem/Text" },
        { "$ref": "#/$def/Widget/WidgetItem/Chart" },
        { "$ref": "#/$def/Widget/WidgetItem/PieChart" },
        { "$ref": "#/$def/Widget/WidgetItem/OrderProgress" }
      ],
      "WidgetItem": {
        "Text": {
          "required": [
            "type",
            "title",
            "column",
            "row",
            "width",
            "height",
            "data_source",
            "field"
          ],
          "additionalProperties": false,
          "properties": {
            "type": { "description": "Text widget.", "const": "TEXT" },
            "title": {
              "description": "Title of the widget.",
              "$ref": "#/$def/Name"
            },
            "column": {
              "description": "The horizontal position of the widget.",
              "type": "integer",
              "minimum": 0,
              "maximum": 11
            },
            "row": {
              "description": "The vertical position of the widget.",
              "type": "integer",
              "minimum": 0
            },
            "width": {
              "description": "The width of the widget",
              "type": "integer",
              "minimum": 1,
              "maximum": 12
            },
            "height": {
              "description": "The height of the widget",
              "type": "integer",
              "minimum": 1
            },
            "data_source": {
              "type": "object",
              "oneOf": [
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/WeighingStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/DowntimeStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/OrderStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/LoginStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/OrderData"
                }
              ]
            },
            "field": {
              "description": "Data source field for this widget.",
              "type": "string"
            },
            "time_filter": {
              "description": "Time filter that applies only to this widget.",
              "$ref": "#/$def/Enums/DashboardDataSourceTimeFilter"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/WeighingStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "field": {
                    "$ref": "#/$def/Enums/DashboardWeighingStatisticDataSource/Metric"
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/DowntimeStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "field": {
                    "$ref": "#/$def/Enums/DashboardDowntimeStatisticDataSource/Metric"
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/OrderStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "field": {
                    "$ref": "#/$def/Enums/DashboardOrderStatisticDataSource/Metric"
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/LoginStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "field": {
                    "$ref": "#/$def/Enums/DashboardLoginStatisticDataSource/Metric"
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/OrderData"
                  }
                }
              },
              "then": {
                "properties": {
                  "field": {
                    "$ref": "#/$def/Enums/DashboardOrderDataSource/Field"
                  }
                }
              }
            }
          ]
        },
        "Chart": {
          "additionalProperties": false,
          "required": [
            "type",
            "title",
            "column",
            "row",
            "width",
            "height",
            "data_source",
            "common_series_settings",
            "series",
            "pagination_enabled"
          ],
          "properties": {
            "type": { "description": "Chart widget.", "const": "CHART" },
            "title": {
              "description": "Title of the widget.",
              "$ref": "#/$def/Name"
            },
            "column": {
              "description": "The horizontal position of the widget.",
              "type": "integer",
              "minimum": 0,
              "maximum": 11
            },
            "row": {
              "description": "The vertical position of the widget.",
              "type": "integer",
              "minimum": 0
            },
            "width": {
              "description": "The width of the widget",
              "type": "integer",
              "minimum": 1,
              "maximum": 12
            },
            "height": {
              "description": "The height of the widget",
              "type": "integer",
              "minimum": 1
            },
            "data_source": {
              "type": "object",
              "oneOf": [
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/WeighingStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/DowntimeStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/OrderStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/LoginStatisticData"
                }
              ]
            },
            "common_series_settings": {
              "description": "Settings that apply to every series.",
              "type": "object",
              "required": ["dimension"],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "#/$def/Enums/DashboardChartSeriesType"
                },
                "dimension": { "type": "string" },
                "time_filter": {
                  "description": "Time filter that applies only to this widget.",
                  "$ref": "#/$def/Enums/DashboardDataSourceTimeFilter"
                }
              }
            },
            "series": {
              "description": "List of individual series or auto-generated series configuration.",
              "oneOf": [
                {
                  "type": "object",
                  "description": "Automatically generated series definition.",
                  "required": ["generate_by", "metric"],
                  "additionalProperties": false,
                  "properties": {
                    "generate_by": {
                      "description": "Defines how the series should be automatically generated (e.g., BEST_WORST).",
                      "type": "string",
                      "enum": ["BEST_WORST"]
                    },
                    "best_count": {
                      "description": "Defines how many of the best values should be shown.",
                      "type": "integer",
                      "minimum": 0
                    },
                    "worst_count": {
                      "description": "Defines how many of the worst values should be shown.",
                      "type": "integer",
                      "minimum": 0
                    },
                    "type": {
                      "$ref": "#/$def/Enums/DashboardChartSeriesType"
                    },
                    "metric": {
                      "description": "Metric for generated series.",
                      "type": "string"
                    },
                    "time_filter": {
                      "description": "Time filter that applies to all generated series.",
                      "$ref": "#/$def/Enums/DashboardDataSourceTimeFilter"
                    }
                  }
                },
                {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "metric"],
                    "additionalProperties": false,
                    "properties": {
                      "type": {
                        "$ref": "#/$def/Enums/DashboardChartSeriesType"
                      },
                      "name": {
                        "description": "Name of the series.",
                        "$ref": "#/$def/Name"
                      },
                      "metric": {
                        "description": "Metric for this series.",
                        "type": "string"
                      },
                      "time_filter": {
                        "description": "Time filter that applies only to this series.",
                        "$ref": "#/$def/Enums/DashboardDataSourceTimeFilter"
                      }
                    }
                  }
                }
              ]
            },
            "pagination_enabled": {
              "description": "Configures whether the displayed data should be split into pages. Page size can be configured by 'maximum_page_items'",
              "type": "boolean"
            },
            "maximum_page_items": {
              "description": "Configures how many items are shown per page when 'pagination_enabled' is enabled. Default value is 10.",
              "type": "integer",
              "minimum": 0
            },
            "rotated": {
              "description": "Configures whether the chart should be rotated or not.",
              "type": "boolean"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/WeighingStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "common_series_settings": {
                    "type": "object",
                    "properties": {
                      "dimension": {
                        "$ref": "#/$def/Enums/DashboardWeighingStatisticDataSource/Dimension"
                      }
                    }
                  },
                  "series": {
                    "oneOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "metric": {
                              "$ref": "#/$def/Enums/DashboardWeighingStatisticDataSource/Metric"
                            }
                          }
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "metric": {
                            "$ref": "#/$def/Enums/DashboardWeighingStatisticDataSource/Metric"
                          }
                        }
                      }
                    ]
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/DowntimeStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "common_series_settings": {
                    "type": "object",
                    "properties": {
                      "dimension": {
                        "$ref": "#/$def/Enums/DashboardDowntimeStatisticDataSource/Dimension"
                      }
                    }
                  },
                  "series": {
                    "oneOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "metric": {
                              "$ref": "#/$def/Enums/DashboardDowntimeStatisticDataSource/Metric"
                            }
                          }
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "metric": {
                            "$ref": "#/$def/Enums/DashboardDowntimeStatisticDataSource/Metric"
                          }
                        }
                      }
                    ]
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/OrderStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "common_series_settings": {
                    "type": "object",
                    "properties": {
                      "dimension": {
                        "$ref": "#/$def/Enums/DashboardOrderStatisticDataSource/Dimension"
                      }
                    }
                  },
                  "series": {
                    "oneOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "metric": {
                              "$ref": "#/$def/Enums/DashboardOrderStatisticDataSource/Metric"
                            }
                          }
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "metric": {
                            "$ref": "#/$def/Enums/DashboardOrderStatisticDataSource/Metric"
                          }
                        }
                      }
                    ]
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/LoginStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "common_series_settings": {
                    "type": "object",
                    "properties": {
                      "dimension": {
                        "$ref": "#/$def/Enums/DashboardLoginStatisticDataSource/Dimension"
                      }
                    }
                  },
                  "series": {
                    "oneOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "metric": {
                              "$ref": "#/$def/Enums/DashboardLoginStatisticDataSource/Metric"
                            }
                          }
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "metric": {
                            "$ref": "#/$def/Enums/DashboardLoginStatisticDataSource/Metric"
                          }
                        }
                      }
                    ]
                  }
                }
              }
            }
          ]
        },
        "PieChart": {
          "required": [
            "type",
            "title",
            "column",
            "row",
            "width",
            "height",
            "data_source",
            "common_series_settings",
            "series"
          ],
          "additionalProperties": false,
          "properties": {
            "type": {
              "description": "Pie chart widget.",
              "const": "PIE_CHART"
            },
            "title": {
              "description": "Title of the widget.",
              "$ref": "#/$def/Name"
            },
            "column": {
              "description": "The horizontal position of the widget.",
              "type": "integer",
              "minimum": 0
            },
            "row": {
              "description": "The vertical position of the widget.",
              "type": "integer",
              "minimum": 0,
              "maximum": 11
            },
            "width": {
              "description": "The width of the widget",
              "type": "integer",
              "minimum": 1,
              "maximum": 12
            },
            "height": {
              "description": "The height of the widget",
              "type": "integer",
              "minimum": 1
            },
            "data_source": {
              "type": "object",
              "oneOf": [
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/WeighingStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/DowntimeStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/OrderStatisticData"
                },
                {
                  "$ref": "#/$def/Widget/WidgetDataSource/LoginStatisticData"
                }
              ]
            },
            "common_series_settings": {
              "type": "object",
              "required": ["dimension"],
              "additionalProperties": false,
              "properties": {
                "dimension": {
                  "type": "string"
                },
                "time_filter": {
                  "description": "Time filter that applies only to this widget.",
                  "$ref": "#/$def/Enums/DashboardDataSourceTimeFilter"
                },
                "small_values_grouping": {
                  "description": "Configures whether (and how) smaller values should be grouped into a single slice.",
                  "$ref": "#/$def/Widget/PieChartSmallValuesGrouping"
                }
              }
            },
            "series": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "metric"],
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "description": "Name of the series",
                    "$ref": "#/$def/Name"
                  },
                  "metric": {
                    "description": "Metric for this series.",
                    "type": "string"
                  },
                  "time_filter": {
                    "description": "Time filter that applies only to this series.",
                    "$ref": "#/$def/Enums/DashboardDataSourceTimeFilter"
                  },
                  "small_values_grouping": {
                    "description": "Configures whether (and how) smaller values should be grouped into a single slice.",
                    "$ref": "#/$def/Widget/PieChartSmallValuesGrouping"
                  }
                }
              }
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/WeighingStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "common_series_settings": {
                    "type": "object",
                    "properties": {
                      "dimension": {
                        "$ref": "#/$def/Enums/DashboardWeighingStatisticDataSource/Dimension"
                      }
                    }
                  },
                  "series": {
                    "oneOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "metric": { "$ref": "#/$def/Enums/DashboardWeighingStatisticDataSource/Metric" }
                          }
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "metric": { "$ref": "#/$def/Enums/DashboardWeighingStatisticDataSource/Metric" }
                        }
                      }
                    ]
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/DowntimeStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "common_series_settings": {
                    "type": "object",
                    "properties": {
                      "dimension": {
                        "$ref": "#/$def/Enums/DashboardDowntimeStatisticDataSource/Dimension"
                      }
                    }
                  },
                  "series": {
                    "oneOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "metric": { "$ref": "#/$def/Enums/DashboardDowntimeStatisticDataSource/Metric" }
                          }
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "metric": { "$ref": "#/$def/Enums/DashboardDowntimeStatisticDataSource/Metric" }
                        }
                      }
                    ]
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/OrderStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "common_series_settings": {
                    "type": "object",
                    "properties": {
                      "dimension": {
                        "$ref": "#/$def/Enums/DashboardOrderStatisticDataSource/Dimension"
                      }
                    }
                  },
                  "series": {
                    "oneOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "metric": { "$ref": "#/$def/Enums/DashboardOrderStatisticDataSource/Metric" }
                          }
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "metric": { "$ref": "#/$def/Enums/DashboardOrderStatisticDataSource/Metric" }
                        }
                      }
                    ]
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "data_source": {
                    "type": "object",
                    "$ref": "#/$def/Widget/WidgetDataSource/LoginStatisticData"
                  }
                }
              },
              "then": {
                "properties": {
                  "common_series_settings": {
                    "type": "object",
                    "properties": {
                      "dimension": {
                        "$ref": "#/$def/Enums/DashboardLoginStatisticDataSource/Dimension"
                      }
                    }
                  },
                  "series": {
                    "oneOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "metric": { "$ref": "#/$def/Enums/DashboardLoginStatisticDataSource/Metric" }
                          }
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "metric": { "$ref": "#/$def/Enums/DashboardLoginStatisticDataSource/Metric" }
                        }
                      }
                    ]
                  }
                }
              }
            }
          ]
        },
        "OrderProgress": {
          "required": [
            "type",
            "column",
            "row",
            "width",
            "height"
          ],
          "additionalProperties": false,
          "properties": {
            "type": {
              "description": "Order progress widget.",
              "const": "ORDER_PROGRESS"
            },
            "title": {
              "description": "Title of the widget.",
              "$ref": "#/$def/Name"
            },
            "column": {
              "description": "The horizontal position of the widget.",
              "type": "integer",
              "minimum": 0
            },
            "row": {
              "description": "The vertical position of the widget.",
              "type": "integer",
              "minimum": 0,
              "maximum": 11
            },
            "width": {
              "description": "The width of the widget",
              "type": "integer",
              "minimum": 1,
              "maximum": 12
            },
            "height": {
              "description": "The height of the widget",
              "type": "integer",
              "minimum": 1
            }
          }
        }
